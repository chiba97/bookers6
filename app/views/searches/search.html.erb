<div class="container px-5 px-sm-0">
  
  <div class="row">
    <div class="col">
      
      <% if @range == "Book" %>
        <h2>Books search for "<%= @word %>"</h2>
      <% else %>
        <h2>Users search for "<%= @word %>"</h2>
      <% end %>
      <table class="table table-hover table-inverse">
        <% if @range == "Book" %>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.user) do %>
                <%= attachment_image_tag book.user, :profile_image,:fill,10,10, format: "jpeg",fallback: "images/no_image.jpg"%>
                <% end %>
              </td>
              <td><%= link_to book.title,book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        <% else %>
        <thead>
          <tr>
            <th></th>
            <th>Name</th>
            <th></th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <%= link_to user_path(user.id) do %>
                <%= attachment_image_tag user, :profile_image,:fill,10,10, format: "jpeg",fallback: "images/no_image.jpg"%>
                <% end %>
              </td>
              <td><%= user.name %></td>
              <td><%= link_to "show",user_path(user.id) %></td>
            </tr>
          <% end %>
        <% end %>
        </tbody>
      </table>
    </div>
    
    
    
  </div>
</div>